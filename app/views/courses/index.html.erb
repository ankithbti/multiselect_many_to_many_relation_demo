<h1>Courses</h1>

<% if @courses.empty? %>
  <strong>Currently no courses.</strong>
<% else %>
<table>
  <tr>
    <th>Name</th>
  </tr>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= link_to "Show", course %></td>
      <td><%= link_to "Edit", edit_course_path(course) %></td>
      <td><%= link_to "Destroy", course, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>
<% end %>

<p><%= link_to "New Course", new_course_path %></p>
